<h1 class="display-4 p-2">Edit Users Profile</h1> 
<div class="row">  
<div class="col-4">   
    <%= form_with(method: :patch, model: @user,local: true) do |form| %>      
    <%= render 'errors', object: @user %>     
<div class="form-group">        
    <%= form.label :email %>        
    <%= form.text_field :email, id: :email, class: 'form-control' %>      
    </div>      
<div class="form-group">        
    <%= form.label :role %>        
   <%=form.select (:role), id:  :role do %>
        <% @roles.each do |r| %>
            <%= content_tag(:option,r, value: r, class: 'form-control') %>
        <% end %>
    <% end %>      
</div>      
<div class="form-group">        
    <%= form.submit class: 'btn btn-outline-primary' %>      
</div>    
    <% end %>  
</div>  
<div class="col-8">
    
</div> 
</div>