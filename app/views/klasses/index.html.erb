

    <% if @message %>
    <div id="error_explanation" class="border border-danger rounded p-2"> <%=@message %></div>
    <% end %>
    
    
    <a href="/klasses/new" class="btn btn-outline-primary m-2">
      <i class="fa fa-plus-square"></i> Create Class
    </a>

   
    <div>
        <h4>Classes</h4>
    </div>
    <div >
        <table class="table" >
            
        <thead>
            <tr>
                <th></th>
                 <th> Id</th>
                <th> Name</th>
                <th> Subject</th>
                <th> Level</th>
                <th> Credit</th>
            </tr>
        </thead>
        <tbody>
            <% @klasses.each do |k|%>
            <tr>
              
                <td></td>
                <td><%= k.id %></td>
                <td><%= k.name %></td>
                <td><%= k.subject %></td>
                <td><%= k.level %></td>
                <td><%= k.credit %></td>
                
            </tr>
            <% end %>
        </tbody>
        </table>
    </div>